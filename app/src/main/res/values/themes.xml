<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DreamWorld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="editTextStyle">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:background">@drawable/white_border</item>
        <item name="android:paddingHorizontal">@dimen/_10sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/monda</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="editTextStyleTwo">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:background">@drawable/black_border</item>
        <item name="android:paddingHorizontal">@dimen/_10sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/monda</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/goldman_regular</item> <!-- or a built-in font name -->
        <item name="android:textSize">@dimen/_12ssp</item> <!-- Optional -->
        <item name="android:textColor">@color/white</item> <!-- Optional -->
    </style>
    <style name="titleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppBottomSheetDialogTheme2" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle2</item>
    </style>
    <style name="CustomBottomSheetStyle2" parent="@style/CustomBottomSheetStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>